{
  "name": "mtr-provisioning-app",
  "version": "1.0.0",
  "description": "Microsoft Teams Room Provisioning Application",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run clean && npm run build:main && npm run build:renderer && npm run copy-renderer",
    "build:main": "tsc",
    "build:renderer": "webpack --config webpack.config.js",
    "copy-renderer": "cp src/renderer/index.html dist/renderer/ && cp src/renderer/styles.css dist/renderer/",
    "dev": "npm run build && concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"node watch-renderer.js\" \"npm run start-dev\"",
    "watch:main": "tsc -w",
    "watch:renderer": "webpack --config webpack.config.js --watch",
    "start-dev": "nodemon",
    "clean": "rimraf dist && mkdir -p dist/renderer"
  },
  "keywords": [
    "electron",
    "meeting-room",
    "teams",
    "intune"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.banenor.meetingroom",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@azure/identity": "^4.8.0",
    "@azure/msal-node": "^1.14.6",
    "@microsoft/microsoft-graph-client": "^3.0.1",
    "@types/winston": "^2.4.4",
    "dotenv": "^16.0.0",
    "electron": "^28.0.0",
    "electron-store": "^8.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  }
}
