{
  "name": "mtr-provisioning-app",
  "version": "1.0.0",
  "description": "Microsoft Teams Room Provisioning Application",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc && tsc -p tsconfig.renderer.json && cp src/renderer/index.html dist/renderer/ && cp src/renderer/styles.css dist/renderer/",
    "dev": "tsc -w & tsc -w -p tsconfig.renderer.json & electron .",
    "clean": "rm -rf dist/* node_modules/.cache/* && mkdir -p dist/renderer",
    "test-graph": "tsc && node dist/test-graph.js",
    "test-graph-interactive": "tsc && node dist/test-graph-interactive.js",
    "debug-graph": "tsc && node dist/debug-graph.js",
    "check-env": "tsc && node dist/check-env.js",
    "test-api-connection": "tsc && node dist/api-connection-tester.js",
    "test-api": "tsc && node dist/test-api-helper.js"
  },
  "keywords": [
    "electron",
    "meeting-room",
    "teams",
    "intune"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.banenor.meetingroom",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@azure/identity": "^4.8.0",
    "@azure/msal-node": "^1.14.6",
    "@microsoft/microsoft-graph-client": "^3.0.1",
    "@types/node-fetch": "^2.6.12",
    "@types/winston": "^2.4.4",
    "axios": "^1.8.4",
    "dotenv": "^16.0.0",
    "electron": "^28.0.0",
    "electron-store": "^8.1.0",
    "node-fetch": "^3.3.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  }
}
